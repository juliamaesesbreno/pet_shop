<p id="notice"><%= notice %></p>
<div>
  <center><h1>Pet Shop Inventory</h1></center>
</div>
<br>
<table>
  <thead>
    <tr>
      <center><th>Species</th></center>
      <th>Breed</th>
      <th>Price</th>
      <th>Status</th>
      <th><colspan="3"></th>
    </tr>
  </thead>
<center><%= form_tag('/', method: 'get') do %>
  <%= text_field_tag 'query' %>
  <%= submit_tag 'Filter' %>
  <br><%= radio_button_tag 'field', 'Species' %> Species
  <%= radio_button_tag 'field', 'Breed' %> Breed
  <%= radio_button_tag 'field', 'Price' %> Price
  <%= radio_button_tag 'field', 'Status' %> Status</center>
<% end %><center>
<% @animal.each do |animal| %>
        <center><td><%= animal.Species %></td></center>
        <center><td><%= animal.Breed %></td></center>
       <center> <td><%= animal.Price %></td></center>
        <center><td><%= animal.Status %></td></center>
        <% if animal.Status == 'For Sale' %>
          <td><button><%= link_to 'Sold', animal_change_status_sold_path(animal)%></button></td>
        <% else %>
          <center><td><button><%= link_to 'For Sale', animal_change_status_sale_path(animal)%></button></td>
        <%end%>
       <center> <td><button><%= link_to 'Show', animal%></button></td></center>
       <center> <td><button><%= link_to 'Edit', edit_animal_path(animal) %></button></td></center>
        <center><td><button><%= link_to 'Delete', animal, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr></center>
    <% end %>
  </tbody>
</table>
<br>
<button><%= link_to 'Add Animal', new_animal_path %></button> |
<button><%= link_to 'Inventory', show_inventory_path%></button> |
<button><%= link_to 'Log Out', login_path%></button> 
